/* @group Global Elements */

p {
  padding: 0px;
  margin: 0px;
}

/* @end */

/* ----- Link Style ---- */

a {
  color: rgb(0,150,207);
  text-decoration: underline;
}

/* @group Coloured Message Elements */

.TextMessage_HostName,
.TextMessage_ServerLink,
.TextMessage_ChannelLink {
  color: rgb(108,129,202);
  font-weight: bold;
  text-transform: uppercase;
  text-decoration: none;
}

.TextMessage_UserLink {
  color: rgb(108,129,202);
  font-weight: bold;
  text-decoration: none;
}

.TextMessage_Welcome,
.TextMessage_HostMessage {
  color: rgb(195,196,197);
  font-weight: bold;
}

.TextMessage_Message,	
.TextMessage_Poke,
.TextMessage_Normal,
.TextMessage_Connected,
.TextMessage_ClientConnected,
.TextMessage_ClientJoined,

.TextMessage_Disconnected,
.TextMessage_ClientDisconnected,
.TextMessage_ClientSwitched,
.TextMessage_ClientLeft,

.TextMessage_ClientDropped,

.TextMessage_ChannelCreated,
.TextMessage_ChannelDeleted,
.TextMessage_ChannelEdited,
.TextMessage_ChannelMoved,
.TextMessage_ServerEdited {
  color: rgb(195,196,197);
}

.TextMessage_GroupAssigned,
.TextMessage_GroupRevoked,
.TextMessage_TalkPowerAssigned,
.TextMessage_TalkPowerRevoked,
.TextMessage_TalkPowerRequested {
  color: rgb(195,196,197);
  font-weight: bold;
}

.TextMessage_ClientKicked,
.TextMessage_ClientBanned {
  color: rgb(214,71,68);
}

/* @end */

/* @group Error Message Elements */

.TextMessage_ServerError {
  color: rgb(128,62,65);
  font-weight: bold;
}

/* @end */

/* ---- TPL definitions ---- */

table#info {
  border-collapse: collapse;
  border-spacing: 0px;
}

table#list {
  border-collapse: collapse;
  border-spacing: 0px;
  margin-bottom: 10px;
}

td {
  padding: 0px 4px 0px 1px;
}

td.label {
  font-weight: bold;
}

td.space {
  padding-top: 10px;
}

td.list {
  padding: 4px 1px 0px 8px;
}

td.noborder {
    padding: 0px;
}

td.space {
  padding-top: 6px;
}

.blue {
  color: rgb(105,126,196);
}

.green {
  color: rgb(67,181,129);
}

.red {
  color: rgb(240,71,71);
}

.redder {
  color: rgb(240,71,71);
}

.yellow {
  color: rgb(250,166,26);
}

.topic {
  text-align: center;
  vertical-align: top;
  font-size: 16pt;
  font-weight: bold;
}

.active {
  color: rgb(105,126,196);
  text-decoration: underline;
}

.bolf {
  font-size: 10pt;
}

.inactive {
  color: rgb(195,196,197);
  text-decoration: underline;
}

.mar-bot {
  margin: 0 0 4px 0;
}

.noborder {
    margin: 0 0 0 -2px;
}

.pad-bot {
  padding: 0px 0px 2px 0px;
}

.recording {
  color: rgb(201,7,20);
  font-weight: bold;
}

.rec-text {
  text-align: center;
  color: rgb(201,7,20);
  font-size: 24px;
  font-weight: bold;
}

.del-text {
  text-align: center;
  color: rgb(201,7,20);
  font-size: 18px;
  font-weight: bold;
}

.silent-link {
  color: rgb(216,216,216);
  text-decoration: none;
}

.vert-mid {
  vertical-align: top;
}